/* pages/task/taskdetails.wxss */

.top-task {
  height: 408rpx;
  position: relative;
  width: 100%;
}

.taskimg {
  width: 100%;
  height: 100%;
}

.taskcontainer {
  width: 99%;
  position: absolute;
  top: 0;
  left: 0;
}
 
.leftshow {
  padding: 15rpx 15rpx 15rpx 21rpx;
}

.titletask {
  font-size: 18px;
  text-align: center;
  padding: 11rpx;
  color: #FFFFFF;
}

.numtask {
  font-size: 30px;
  text-align: center;
  padding: 38rpx;
  color: #FFFFFF;
}

.color-curr {
  font-size: 14px;
  color: #bae2ff;
}

.distance {
  font-size: 14px;
  color: #bae2ff;
}

/** 地址图标样式*/

.currightfunction {
  height: auto;
  padding-left: 25rpx;
  color: #bae2ff;
   font-size: 14px;
}

.currightfunction view {
  float: left;
  margin-right: 5px;
}

.currightfunction view image {
  width: 10px;
  height: 17px;
  margin-top: 2px;
}

/**end 地址图标样式*/
.middleContentTow {
  background: white;
  height: auto;
  padding-top: 18px;
  margin-top: 9px;
  overflow: hidden;
}
.floatCon {
  padding: 0px 7px 0px 7px;
  overflow: hidden;
}

.leftfunction {
  float: left;
}
.lcolor{
  color: #818181;
}
.distask{
  text-align: center;
  padding:8rpx 8rpx 29rpx 8rpx;
  font-size: 16px;
}

.rightfunction {
  width: 19px;
  height: 19px;
  float: right;
}

.rightfunction image {
  width: 100%;
  height: 100%;
}

.linebor {
  overflow: hidden;
  margin: 10px auto;
  width: 80%;
  border-bottom: 1px solid #bababa;
}
.clientinfo {
  width: 50%;
  float: left;
  text-align: center;
}

.clientshow {
  margin: 7px 0% 7px 0%;
  width: 80%;
  text-align: center;
  height: 35px;
  display: inline-block;
  line-height: 35px;
  border-radius: 25px;
  background: #f5f5f5;
}

.clientshow text {
  font-size: 12px;
}
.contents{
  border-top: 8px solid #E7E7E7;
  background: white;
  overflow: hidden;
  padding: 21rpx 25rpx 21rpx 25rpx;
}
.lefts{
  float: left;
  padding-right: 15px;
}
.lcolo1{
  color: #FE0303;
}
.lcolo2{
  color: #2D9E2C;
}
.rights{
  float: right;
  
}
.rights image {
  width: 19px;
  height: 19px;
  padding-top:4rpx; 
}